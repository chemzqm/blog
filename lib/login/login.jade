extends ../views/layout

block content
  #login_form
    #form
      form(action='/login', method="post")
        input(type="hidden", name="_csrf", value="#{csrf}")
        .control-group
          input#login-name(type="text", name="name", placeholder="Enter your name", autofocus="true")
          label.login-field-icon.fui-man-16(for="login-name")
        .control-group
          input#login-pass(type="password", placeholder="Password", name="password")
          label.login-field-icon.fui-lock-16(for="login-pass")
        .control-group
          input.btn.btn-primary(type="submit", value="Login")
