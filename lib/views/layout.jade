          li: a(href="/achieve") 归档
          li: a(href="/about") 关于
          li.admin.hidden: a(href="/admin") 管理
    script(type="text/javascript")
      var path = window.location.pathname;
      var navs = document.querySelectorAll('#header ul a');
      for(var i = 0; i < navs.length; i++){
        if(path === navs[i].getAttribute('href')){
          navs[i].className = 'active';
        }
      }
      if(/(^|(;\s*))name/.test(document.cookie)){
        document.querySelector('#header li.admin').style.display = 'block';
      }

