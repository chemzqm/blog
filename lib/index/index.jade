extends ../views/layout

block content

  .container
    #main
      each p in posts
        article.post.block
          h2.title
            a.title(href="/view/post/#{p.id}") #{p.title} 
          .meta
            span #{moment(p.create).format("YY-MM-DD")}
          .markdown
            | !{filter(p.content, p.id)}
